<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.hotmail.leon.zimmermann.homeassistant.app.ui.overview.consumption.ConsumptionViewModel" />
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/consumption_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_input_wrapper"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infoboxView2">

                <AutoCompleteTextView
                        android:id="@+id/name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:inputType="text|textAutoComplete" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                    android:id="@+id/product_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@{viewModel.consumptionMode == viewModel.productMode ? @color/colorPrimary : @android:color/white}"
                    android:minHeight="25dp"
                    android:text="Product"
                    android:textColor="@{viewModel.consumptionMode == viewModel.productMode ? @android:color/white : @color/colorPrimary}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/template_mode_button"
                    app:layout_constraintEnd_toStartOf="@+id/template_mode_button"
                    app:layout_constraintTop_toTopOf="@+id/template_mode_button" />

            <Button
                    android:id="@+id/template_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@{viewModel.consumptionMode == viewModel.templateMode ? @color/colorPrimary : @android:color/white}"
                    android:minHeight="25dp"
                    android:text="Template"
                    android:textColor="@{viewModel.consumptionMode == viewModel.templateMode ? @android:color/white : @color/colorPrimary}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/meal_mode_button"
                    app:layout_constraintEnd_toStartOf="@+id/meal_mode_button"
                    app:layout_constraintTop_toTopOf="@+id/meal_mode_button" />

            <Button
                    android:id="@+id/meal_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@{viewModel.consumptionMode == viewModel.mealMode ? @color/colorPrimary : @android:color/white}"
                    android:minHeight="25dp"
                    android:text="Meal"
                    android:textColor="@{viewModel.consumptionMode == viewModel.mealMode ? @android:color/white : @color/colorPrimary}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/title" />

            <Button
                    android:id="@+id/consume_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Consume"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additionalFieldsContainer" />

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Consume"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.hotmail.leon.zimmermann.homeassistant.components.views.InfoboxView
                    android:id="@+id/infoboxView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:text="Select if you consumed a product, template or meal, enter the according name and press consume to update your homes stock" />

            <FrameLayout
                    android:id="@+id/additionalFieldsContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/name_input_wrapper"
                    app:layout_constraintStart_toStartOf="@+id/name_input_wrapper"
                    app:layout_constraintTop_toBottomOf="@+id/name_input_wrapper">

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>