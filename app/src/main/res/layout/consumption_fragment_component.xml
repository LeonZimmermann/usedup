<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="viewModel"
                type="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.overview.consumption.ConsumptionViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/consumption_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <AutoCompleteTextView
                    android:id="@+id/name_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:hint="Name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/meal_mode_button" />

            <Button
                    android:id="@+id/product_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@{viewModel.consumptionMode == viewModel.productMode ? @drawable/pill_button_active : @drawable/pill_button}"
                    android:minHeight="25dp"
                    android:text="Product"
                    android:textColor="@{viewModel.consumptionMode == viewModel.productMode ? @android:color/white : @android:color/black}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/template_mode_button"
                    app:layout_constraintEnd_toStartOf="@+id/template_mode_button"
                    app:layout_constraintTop_toTopOf="@+id/template_mode_button" />

            <Button
                    android:id="@+id/template_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@{viewModel.consumptionMode == viewModel.templateMode ? @drawable/pill_button_active : @drawable/pill_button}"
                    android:minHeight="25dp"
                    android:text="Template"
                    android:textColor="@{viewModel.consumptionMode == viewModel.templateMode ? @android:color/white : @android:color/black}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/meal_mode_button"
                    app:layout_constraintEnd_toStartOf="@+id/meal_mode_button"
                    app:layout_constraintTop_toTopOf="@+id/meal_mode_button" />

            <Button
                    android:id="@+id/meal_mode_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@{viewModel.consumptionMode == viewModel.mealMode ? @drawable/pill_button_active : @drawable/pill_button}"
                    android:minHeight="25dp"
                    android:text="Meal"
                    android:textColor="@{viewModel.consumptionMode == viewModel.mealMode ? @android:color/white : @android:color/black}"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/title" />

            <Button
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:id="@+id/consume_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Consume"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/additionalFieldsContainer" />

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Consume"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                    android:id="@+id/additionalFieldsContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/name_input"
                    app:layout_constraintStart_toStartOf="@+id/name_input"
                    app:layout_constraintTop_toBottomOf="@+id/name_input">

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
