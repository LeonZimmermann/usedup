<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
                name="viewModel"
                type="com.hotmail.leon.zimmermann.homeassistant.app.ui.meals.editor.MealEditorViewModel" />

        <variable
                name="eventHandler"
                type="com.hotmail.leon.zimmermann.homeassistant.app.ui.meals.editor.MealEditorFragment.EventHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/save_dinner_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:onClick="@{eventHandler::onSaveDinnerButtonClicked}"
                android:text="Save Dinner"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    tools:context=".ui.meals.details.MealDetailsFragment">

                <ImageView
                        android:id="@+id/consumption_creation_image_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:background="#999999"
                        android:cropToPadding="true"
                        android:onClick="@{eventHandler::onImageViewClicked}"
                        android:scaleType="center"
                        android:src="@drawable/add_photo_icon"
                        android:tint="@android:color/white"
                        app:layout_constraintDimensionRatio="16:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/name_input_wrapper"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consumption_creation_image_view">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:text="@={viewModel.nameString}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/duration_input_wrapper"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/name_input_wrapper"
                        app:layout_constraintStart_toStartOf="@+id/name_input_wrapper"
                        app:layout_constraintTop_toBottomOf="@+id/name_input_wrapper">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/duration_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/duration"
                            android:inputType="number"
                            android:text="@={viewModel.durationString}" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                        android:id="@+id/add_ingredients_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        app:icon="@drawable/add_icon"
                        app:iconGravity="textStart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:onClick="@{eventHandler::onAddIngredientsButtonClicked}"
                        android:text="@string/add_ingredients"
                        app:layout_constraintEnd_toEndOf="@+id/duration_input_wrapper"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/duration_input_wrapper"
                        app:layout_constraintTop_toBottomOf="@+id/ingredients_list" />

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/ingredients"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        app:layout_constraintEnd_toEndOf="@+id/duration_input_wrapper"
                        app:layout_constraintStart_toStartOf="@+id/duration_input_wrapper"
                        app:layout_constraintTop_toBottomOf="@+id/duration_input_wrapper" />

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/description_input_wrapper"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/add_ingredients_button"
                        app:layout_constraintStart_toStartOf="@+id/add_ingredients_button"
                        app:layout_constraintTop_toBottomOf="@+id/add_ingredients_button">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/description_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/description"
                            android:inputType="textMultiLine"
                            android:text="@={viewModel.descriptionString}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/instructions_input_wrapper"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/description_input_wrapper"
                        app:layout_constraintStart_toStartOf="@+id/description_input_wrapper"
                        app:layout_constraintTop_toBottomOf="@+id/description_input_wrapper">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/instructions_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="@string/instructions"
                            android:inputType="textMultiLine"
                            android:text="@={viewModel.instructionsString}" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ingredients_list"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.consumptionElementList.empty ? View.GONE : View.VISIBLE}"
                        app:layout_constraintEnd_toEndOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        tools:itemCount="5"
                        tools:listitem="@layout/product_item" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
