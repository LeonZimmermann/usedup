<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <AutoCompleteTextView
            android:id="@+id/product_name_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="Product Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/quantity_change_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Quantity Change"
            android:inputType="numberSigned|numberDecimal"
            app:layout_constraintEnd_toStartOf="@+id/measure_input"
            app:layout_constraintStart_toStartOf="@+id/product_name_input"
            app:layout_constraintTop_toBottomOf="@+id/product_name_input" />

    <Spinner
            android:id="@+id/measure_input"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/quantity_change_input"
            app:layout_constraintEnd_toEndOf="@+id/product_name_input"
            app:layout_constraintTop_toTopOf="@+id/quantity_change_input" />

</androidx.constraintlayout.widget.ConstraintLayout>
