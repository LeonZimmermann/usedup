<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation.xml"
        app:startDestination="@id/splash_screen_fragment">

    <fragment
            android:id="@+id/overview_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.overview.OverviewFragment"
            android:label="Overview"
            tools:layout="@layout/overview_fragment">
        <action
                android:id="@+id/action_overview_fragment_to_product_editor_fragment"
                app:destination="@id/product_editor_fragment" />
        <action
                android:id="@+id/action_overview_fragment_to_meal_editor_fragment"
                app:destination="@id/meal_editor_fragment" />
    </fragment>
    <fragment
            android:id="@+id/splash_screen_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.splash.SplashScreenFragment"
            android:label="Splash Screen"
            tools:layout="@layout/fragment_splash_screen" >
        <action
                android:id="@+id/action_splash_screen_fragment_to_overview_fragment"
                app:destination="@id/overview_fragment"
                app:popUpTo="@id/splash_screen_fragment"
                app:popUpToInclusive="true" />
    </fragment>
    <fragment
            android:id="@+id/account_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.account.AccountFragment"
            android:label="Account"
            tools:layout="@layout/account_fragment" />
    <action android:id="@+id/action_global_account_fragment" app:destination="@id/account_fragment" />
    <fragment
            android:id="@+id/product_editor_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.products.ProductEditorFragment"
            android:label="Product Editor" >
        <argument
                android:name="productId"
                app:argType="string"
                app:nullable="true" />
    </fragment>
    <fragment
            android:id="@+id/meal_editor_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.meals.editor.MealEditorFragment"
            android:label="Meal Editor" >
        <action
                android:id="@+id/action_meal_editor_fragment_to_camera_fragment"
                app:destination="@id/camera_fragment" />
    </fragment>
    <fragment
            android:id="@+id/camera_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.ui.fragments.camera.CameraFragment"
            android:label="Camera"
            tools:layout="@layout/camera_fragment" />
</navigation>