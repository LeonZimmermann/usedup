<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation.xml"
        app:startDestination="@id/stock_list_fragment">

    <fragment
            android:id="@+id/stock_list_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.shopping.ShoppingFragment"
            android:label="StockList">
        <action
                android:id="@+id/action_stock_management"
                app:destination="@id/stock_management_fragment" />
    </fragment>
    <fragment
            android:id="@+id/stock_management_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.management.ProductManagementFragment"
            android:label="StockManagement"
            tools:layout="@layout/product_management_fragment">
        <action
                android:id="@+id/action_stock_list"
                app:destination="@id/stock_list_fragment" />
    </fragment>
</navigation>