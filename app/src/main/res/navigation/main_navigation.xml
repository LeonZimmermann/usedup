<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation.xml"
        app:startDestination="@id/overview_fragment">

    <fragment
            android:id="@+id/shopping_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.fragments.shopping.ShoppingFragment"
            android:label="Shopping"
            tools:layout="@layout/shopping_fragment"/>
    <fragment
            android:id="@+id/management_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.fragments.management.ManagementFragment"
            android:label="Management"
            tools:layout="@layout/management_fragment"/>
    <fragment
            android:id="@+id/transaction_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.fragments.transaction.TransactionFragment"
            android:label="Transaction"
            tools:layout="@layout/transaction_fragment" />
    <action
            android:id="@+id/action_global_shopping_fragment"
            app:destination="@id/shopping_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:launchSingleTop="true" />
    <action
            android:id="@+id/action_global_management_fragment"
            app:destination="@id/management_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <action
            android:id="@+id/action_global_transaction_fragment"
            app:destination="@id/transaction_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:launchSingleTop="true" />
    <fragment
            android:id="@+id/overview_fragment"
            android:name="com.hotmail.leon.zimmermann.homeassistant.fragments.overview.OverviewFragment"
            android:label="Overview"
            tools:layout="@layout/overview_fragment" />
    <action
            android:id="@+id/action_global_overviewFragment"
            app:destination="@+id/overview_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
</navigation>